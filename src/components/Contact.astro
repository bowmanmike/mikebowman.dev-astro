---
// import { FaGithub, FaLinkedin, FaEnvelopeOpen } from "react-icons/fa";
import { Icon } from "astro-icon/components";
import ContactMethod from "./ContactMethod.astro";
---

<div class="grid items-center">
  <h3
    class="border-sage mx-auto w-1/2 self-end border-b-4 pb-2 text-center text-3xl"
  >
    Find Me Here!
  </h3>
  <ul class="list-none text-center text-lg">
    <ContactMethod
      text="mike@mikebowman.dev"
      href="mailto:mike@mikebowman.dev"
      methodName="Email Address"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="currentColor"
        class="mr-2 inline-block size-6"
      >
        <path
          d="M19.5 22.5a3 3 0 0 0 3-3v-8.174l-6.879 4.022 3.485 1.876a.75.75 0 1 1-.712 1.321l-5.683-3.06a1.5 1.5 0 0 0-1.422 0l-5.683 3.06a.75.75 0 0 1-.712-1.32l3.485-1.877L1.5 11.326V19.5a3 3 0 0 0 3 3h15Z"
        ></path>
        <path
          d="M1.5 9.589v-.745a3 3 0 0 1 1.578-2.642l7.5-4.038a3 3 0 0 1 2.844 0l7.5 4.038A3 3 0 0 1 22.5 8.844v.745l-8.426 4.926-.652-.351a3 3 0 0 0-2.844 0l-.652.351L1.5 9.589Z"
        ></path>
      </svg>
    </ContactMethod>
    <ContactMethod
      text="bowmanmike"
      href="https://github.com/bowmanmike"
      methodName="Github Profile"
    >
      <Icon name="logos:github-icon" class="mr-2 inline-block" />
      <!-- <FaGithub class="mr-2 inline-block" /> -->
    </ContactMethod>
    <ContactMethod
      href="https://www.linkedin.com/in/bowmanmike1/"
      text="Mike Bowman"
      methodName="LinkedIn Profile"
    >
      <!-- <FaLinkedin class="mr-2 inline-block" /> -->
      <Icon name="cib:linkedin" class="mr-2 inline-block" />
    </ContactMethod>
  </ul>
</div>
